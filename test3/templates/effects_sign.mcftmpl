${sign_nbt(0, "setblock ~ ~-3 ~ redstone_block", lines[0])},\
${sign_nbt(1, r"data merge block ~0 ~-4 ~-2 {Command:\\\"execute at @e[tag=effects_home] positioned ~ ~2 ~ run function v3:effects/%s_init\\\"}" % effect.id, lines[1])},\
${sign_nbt(2, r"data merge block ~-1 ~-2 ~0 {Command:\\\"execute at @e[tag=effects_home] positioned ~ ~2 ~ run function v3:effects/%s\\\"}" % effect.id, lines[2])}\
