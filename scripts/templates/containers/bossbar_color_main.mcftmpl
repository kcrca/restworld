<%namespace name="base" file="../base.mcftmpl"/>
<% colors = ('Blue', 'Green', 'Pink', 'Purple', 'Red', 'White', 'Yellow') %>

<%base:loop collection="${colors}" args="when,i,thing">
${when(i)} bossbar set restworld:bossbar color ${thing.lower()}
${when(i)} data merge block ~0 ~2 ~0 {Text2:${text("Color: " + thing)}}
</%base:loop>
