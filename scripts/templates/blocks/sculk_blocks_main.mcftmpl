<%namespace import="*" file="blocks_base.mcftmpl"/>
<%
    types = (
	Thing("Sculk Vein", block_state="north=true"),
	"Sculk", 'Sculk Sensor',
	Thing("Sculk Catalyst"),
	Thing("Sculk Catalyst|Blooming", id='sculk_catalyst', block_state='bloom=true'),
	Thing("Sculk Shrieker|Can Summon", id='sculk_shrieker', block_state="can_summon=true,shrieking=false"),
	Thing("Sculk Shrieker|Can Summon|Shrieking", id='sculk_shrieker', block_state="can_summon=true,shrieking=true"),
	Thing("Sculk Shrieker|Can't Summon", id='sculk_shrieker', block_state="can_summon=false,shrieking=false"),
	Thing("Sculk Shrieker|Can't Summon|Shrieking", id='sculk_shrieker', block_state="can_summon=false,shrieking=true"),
    )
%>
${blocks(types)}
execute if score ${var} funcs matches 6 positioned ~0 ~3 ~0 run function restworld:particles/shriek_particles
execute if score ${var} funcs matches 8 positioned ~0 ~3 ~0 run function restworld:particles/shriek_particles
