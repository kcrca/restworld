<%namespace name="base" file="../base.mcftmpl"/>

<%base:loop collection="${command_blocks}" args="when,i,thing">
${when(i)} setblock ~ ~3 ~ minecraft:${thing.id}[facing=west,conditional=${str(thing.conditional).lower()}]
<%
    words = thing.name.split(' ')
    modifier = "" if len(words) == 2 else words[0]
%>\
${when(i)} data merge block ~ ~2 ~1 {Text2:${text(modifier)},Text4:${text("(Conditional)" if thing.conditional else "")}}
</%base:loop>
