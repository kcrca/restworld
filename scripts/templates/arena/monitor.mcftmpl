<%def name="monitor(player)">
execute unless entity @e[tag=${player}] run scoreboard players set place_battlers funcs 1
scoreboard players set ${player}_count funcs 0
execute as @e[tag=${player}] run scoreboard players add ${player}_count funcs 1
</%def>

${monitor('hunter')}
${monitor('victim')}

kill @e[type=item,distance=..50]
