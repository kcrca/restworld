<%namespace name="base" file="../base.mcftmpl"/>

<%base:loop collection="${range(0, 2)}" args="when,i,thing">
%if i == 0:
${when(0)} ${base.remove('tag=tadpole')}
${when(0)} setblock ~0 ~2 ~-1 frogspawn
${when(1)} ${base.adult(Thing("Tadpole"), 0, 0, -1, 180, tags=('tadpole', room))}
${when(1)} setblock ~0 ~2 ~-1 air
%endif
kill @e[type=tadpole,tag=!tadpole]
</%base:loop>
