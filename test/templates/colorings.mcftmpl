<%namespace name="base"  file="base.mcftmpl"/>

<%base:loop collection="${colors}" args="when,i,item">

${when(i)} fill ~0 ~3 ~3 ~-1 ~3 ~3 minecraft:${item.id}_stained_glass_pane
${when(i)} setblock ~0 ~4 ~3 minecraft:${item.id}_stained_glass_pane
${when(i)} setblock ~-1 ~3 ~2 minecraft:${item.id}_stained_glass
${when(i)} fill ~-2 ~3 ~1 ~-3 ~3 ~0 minecraft:${item.id}_wool
${when(i)} setblock ~-4 ~3 ~0 minecraft:${item.id}_banner[rotation=0]
${when(i)} fill ~-4 ~3 ~1 ~-6 ~3 ~1 minecraft:${item.id}_carpet
${when(i)} setblock ~-7 ~3 ~1 minecraft:${item.id}_concrete
${when(i)} fill ~-9 ~3 ~4 ~-10 ~3 ~4 minecraft:air
${when(i)} setblock ~-10 ~3 ~4 minecraft:${item.id}_bed[facing=west,part=head]
${when(i)} setblock ~-9 ~3 ~4 minecraft:${item.id}_bed[facing=west,part=foot]

${when(i)} data merge entity @e[tag=colorings_item_frame,limit=1] {Item:{id:${item.dye_name()}},Count:1,ItemRotation:0}

${when(i)} setblock ~-3 ~5 ~1 minecraft:${item.id}_terracotta
${when(i)} setblock ~-5 ~5 ~1 minecraft:${item.id}_shulker_box
${when(i)} setblock ~-7 ~5 ~1 minecraft:${item.id}_concrete_powder

${when(i)} data merge entity @e[tag=colorings_armor_stand,limit=1] {Item:{id:cocoa_beans},Count:1,ItemRotation:0}

${when(i)} data merge entity @e[tag=colorings_armor_stand,limit=1] {CustomName:"\"${item.name}\"",CustomNameVisible:True,ArmorItems:[{id:leather_boots,Count:1,tag:{Variant:2,display:{color:${item.rgb}}}},{id:leather_leggings,Count:1,tag:{Variant:2,display:{color:${item.rgb}}}},{id:leather_chestplate,Count:1,tag:{Variant:2,display:{color:${item.rgb}}}},{id:leather_helmet,Count:1,tag:{Variant:2,display:{color:${item.rgb}}}}]}
${when(i)} data merge entity @e[tag=colorings_llama,limit=1] {DecorItem:{id:${item.id}_carpet,Count:1},CustomNameVisible:True,CustomName:"\"${item.name}\""}

</%base:loop>
