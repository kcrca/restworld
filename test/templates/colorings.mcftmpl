<%namespace name="base"  file="base.mcftmpl"/>
${base.increment(len(colors))}

% for color in colors:
<% i = loop.index %>

${base.when(i)} fill ~0 ~3 ~3 ~-1 ~3 ~3 minecraft:${color.id}_stained_glass_pane
${base.when(i)} setblock ~0 ~4 ~3 minecraft:${color.id}_stained_glass_pane
${base.when(i)} setblock ~-1 ~3 ~2 minecraft:${color.id}_stained_glass
${base.when(i)} fill ~-2 ~3 ~1 ~-3 ~3 ~0 minecraft:${color.id}_wool
${base.when(i)} setblock ~-4 ~3 ~0 minecraft:${color.id}_banner[rotation=0]
${base.when(i)} fill ~-4 ~3 ~1 ~-6 ~3 ~1 minecraft:${color.id}_carpet
${base.when(i)} setblock ~-7 ~3 ~1 minecraft:${color.id}_concrete
${base.when(i)} fill ~-9 ~3 ~4 ~-10 ~3 ~4 minecraft:air
${base.when(i)} setblock ~-10 ~3 ~4 minecraft:${color.id}_bed[facing=west,part=head]
${base.when(i)} setblock ~-9 ~3 ~4 minecraft:${color.id}_bed[facing=west,part=foot]

${base.when(i)} data merge entity @e[tag=colorings_item_frame,limit=1] {Item:{id:${color.dye_name()}},Count:1,ItemRotation:0}

${base.when(i)} setblock ~-3 ~5 ~1 minecraft:${color.id}_terracotta
${base.when(i)} setblock ~-5 ~5 ~1 minecraft:${color.id}_shulker_box
${base.when(i)} setblock ~-7 ~5 ~1 minecraft:${color.id}_concrete_powder

${base.when(i)} data merge entity @e[tag=colorings_armor_stand,limit=1] {Item:{id:cocoa_beans},Count:1,ItemRotation:0}

${base.when(i)} data merge entity @e[tag=colorings_armor_stand,limit=1] {CustomName:"\"${color.name}\"",CustomNameVisible:True,ArmorItems:[{id:leather_boots,Count:1,tag:{Variant:2,display:{color:${color.rgb}}}},{id:leather_leggings,Count:1,tag:{Variant:2,display:{color:${color.rgb}}}},{id:leather_chestplate,Count:1,tag:{Variant:2,display:{color:${color.rgb}}}},{id:leather_helmet,Count:1,tag:{Variant:2,display:{color:${color.rgb}}}}]}
${base.when(i)} data merge entity @e[tag=colorings_llama,limit=1] {DecorItem:{id:${color.id}_carpet,Count:1},CustomNameVisible:True,CustomName:"\"${color.name}\""}

% endfor
