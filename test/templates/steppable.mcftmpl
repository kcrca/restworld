<%namespace name="base"  file="base.mcftmpl"/>

fill ~3 ~2 ~0 ~4 ~4 ~4 minecraft:air

<%base:loop collection="${steppables}" args="when,i,item">
${when(i)} setblock ~1 ~3 ~0 minecraft:${item.block}
${when(i)} data merge block ~0 ~2 ~1 {Text2:${text(item.name)}}
${when(i)} setblock ~1 ~3 ~1 ${item.full_id()}_slab
${when(i)} setblock ~0 ~3 ~2 ${item.full_id()}_stairs[facing=south,shape=outer_left]
${when(i)} setblock ~1 ~3 ~2 ${item.full_id()}_stairs[facing=south,shape=inner_left]
${when(i)} setblock ~0 ~3 ~3 ${item.full_id()}_stairs[facing=east]
${when(i)} setblock ~1 ~4 ~3 ${item.full_id()}_slab[type=top]
${when(i)} setblock ~0 ~3 ~4 minecraft:${item.base_id}

% if item.name.startswith("Sandstone"):
${when(i)} setblock ~4 ~3 ~0 minecraft:chiseled_sandstone
${when(i)} setblock ~3 ~2 ~0 minecraft:wall_sign[facing=west]{Text2:${text("Chiseled")}}
${when(i)} setblock ~4 ~3 ~2 minecraft:cut_sandstone
${when(i)} setblock ~3 ~2 ~2 minecraft:wall_sign[facing=west]{Text2:${text("Cut")}}
${when(i)} setblock ~4 ~3 ~4 minecraft:smooth_sandstone
${when(i)} setblock ~3 ~2 ~4 minecraft:wall_sign[facing=west]{Text2:${text("Smooth")}}
% elif item.name.startswith("Red Sandstone"):
${when(i)} setblock ~4 ~3 ~0 minecraft:chiseled_red_sandstone
${when(i)} setblock ~3 ~2 ~0 minecraft:wall_sign[facing=west]{Text2:${text("Chiseled")}}
${when(i)} setblock ~4 ~3 ~2 minecraft:cut_red_sandstone
${when(i)} setblock ~3 ~2 ~2 minecraft:wall_sign[facing=west]{Text2:${text("Cut")}}
${when(i)} setblock ~4 ~3 ~4 minecraft:smooth_red_sandstone
${when(i)} setblock ~3 ~2 ~4 minecraft:wall_sign[facing=west]{Text2:${text("Smooth")}}
% elif item.name.startswith("Quartz"):
${when(i)} setblock ~4 ~3 ~0 minecraft:chiseled_quartz_block
${when(i)} setblock ~3 ~2 ~0 minecraft:wall_sign[facing=west]{Text2:${text("Chiseled")}}
${when(i)} setblock ~4 ~3 ~2 minecraft:quartz_pillar
${when(i)} setblock ~4 ~4 ~2 minecraft:quartz_pillar[axis=x]
${when(i)} setblock ~3 ~2 ~2 minecraft:wall_sign[facing=west]{Text2:${text("Pillar")}}
${when(i)} setblock ~4 ~3 ~4 minecraft:smooth_quartz
${when(i)} setblock ~3 ~2 ~4 minecraft:wall_sign[facing=west]{Text2:${text("Smooth")}}
% elif item.name.startswith("Cobblestone"):
${when(i)} setblock ~4 ~3 ~0 minecraft:mossy_cobblestone
${when(i)} setblock ~3 ~2 ~0 minecraft:wall_sign[facing=west]{Text2:${text("Mossy")}}
${when(i)} fill ~4 ~3 ~1 ~4 ~3 ~2 minecraft:mossy_cobblestone_wall
${when(i)} setblock ~3 ~2 ~2 minecraft:wall_sign[facing=west]{Text2:${text("Mossy Wall")}}
${when(i)} fill ~4 ~3 ~3 ~4 ~3 ~4 minecraft:cobblestone_wall
${when(i)} setblock ~3 ~2 ~4 minecraft:wall_sign[facing=west]{Text2:${text("Wall")}}
% elif item.name.startswith("Stone Brick"):
${when(i)} setblock ~4 ~3 ~0 minecraft:chiseled_stone_bricks
${when(i)} setblock ~3 ~2 ~0 minecraft:wall_sign[facing=west]{Text2:${text("Chiseled")}}
${when(i)} setblock ~4 ~3 ~2 minecraft:cracked_stone_bricks
${when(i)} setblock ~3 ~2 ~2 minecraft:wall_sign[facing=west]{Text2:${text("Cracked")}}
${when(i)} setblock ~4 ~3 ~4 minecraft:mossy_stone_bricks
${when(i)} setblock ~3 ~2 ~4 minecraft:wall_sign[facing=west]{Text2:${text("Mossy")}}
% elif item.name.startswith("Nether"):
${when(i)} setblock ~4 ~3 ~0 minecraft:red_nether_bricks
${when(i)} setblock ~3 ~2 ~0 minecraft:wall_sign[facing=west]{Text2:${text("Red Nether Bricks")}}
${when(i)} fill ~4 ~3 ~2 ~4 ~3 ~4 minecraft:nether_brick_fence
${when(i)} setblock ~3 ~2 ~4 minecraft:wall_sign[facing=west]{Text2:${text("Nether Brick Fence")}}
% elif item.name.startswith("Purpur"):
${when(i)} setblock ~4 ~3 ~2 minecraft:purpur_pillar
${when(i)} setblock ~4 ~4 ~2 minecraft:purpur_pillar[axis=x]
${when(i)} setblock ~3 ~2 ~2 minecraft:wall_sign[facing=west]{Text2:${text("Pillar")}}
% endif

</%base:loop>
