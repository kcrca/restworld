<%namespace name="base" file="base.mcftmpl"/>
<% blocks = (
       Thing("Redstone"),
       Thing("Emerald"),
       Thing("Nether Quartz"),
       Thing("Gold"),
       Thing("Iron"),
       Thing("Coal"),
       Thing("Lapis"),
       Thing("Diamond"),
   )
%>

<%base:loop collection="${blocks}" args="when,i,thing">
${when(i)} setblock ~ ~3 ~ minecraft:${"%s_ore" % thing.id}
${when(i)} data merge block ~1 ~2 ~ {Text2:${text("%s Ore" % thing.name)}}
<% block_item = Thing("Quartz") if thing.name.startswith("Nether") else thing %>
${when(i)} setblock ~-3 ~3 ~ minecraft:${"%s_block" % block_item.id}
${when(i)} data merge block ~-2 ~2 ~ {Text2:${text("%s Block" % block_item.name)}}
</%base:loop>
