<% furnace_states = (Item("(lit)", "true"), Item("", "false")) %>
<%namespace name="base"  file="base.mcftmpl"/>
${base.increment(len(furnace_states))}

% for v in furnace_states:
<% i = loop.index %>

${base.when(i)} setblock ~ ~3 ~ minecraft:furnace[facing=west,lit=${v.id}]
${base.when(i)} data merge block ~-1 ~2 ~-1 {Text3:${text(v.name)}}

% endfor
