<%namespace name="base"  file="base.mcftmpl"/>
<% furnace_states = (Item("(lit)", "true"), Item("", "false")) %>

<%base:loop collection="${furnace_states}" args="when,i,item">

${base.when(i)} setblock ~ ~3 ~ minecraft:furnace[facing=west,lit=${item.id}]
${base.when(i)} data merge block ~-1 ~2 ~-1 {Text3:${text(item.name)}}

</%base:loop>
