<%namespace name="base"  file="base.mcftmpl"/>
<%
    blocks = [
	Item("Air"),
	Item("Fire", block_state="east=true"),
	Item("Fire", block_state="east=true,north=true"),
	Item("Fire", block_state="east=true,north=true"),
	Item("Fire", block_state="east=true,west=true"),
	Item("Fire", block_state="east=true,west=true,south=true"),
	Item("Fire", block_state="east=true,west=true,south=true,north=true"),
	Item("Fire"),
    ]
%>

<%base:bounce collection="${blocks}" args="when,i,item">
${when(i)} setblock ~ ~3 ~ ${item.full_id()}
</%base:bounce>
