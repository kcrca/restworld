<%namespace name="base"  file="base.mcftmpl"/>
<%
    types = list(Thing(t, "%s Minecart" % to_id(t)) for t in ("", "Chest", "Furnace", "TNT", "Hopper", "Command Block"))
%>

<%base:remove who="tag=minecart_type"/>\
<%base:loop collection="${types}" args="when,i,thing">\
${when(i)} summon ${thing.full_id()} ~0 ~3 ~ {Tags:[minecart_type]}
% if thing.name == "":
${when(i)} data merge block ~1 ~2 ~ {Text2:${text("Minecart")},Text3:${text("")}}
% else :
${when(i)} data merge block ~1 ~2 ~ {Text2:${text(thing.name)},Text3:${text("Minecart")}}
% endif
</%base:loop>
