<%namespace name="base"  file="base.mcftmpl"/>
<%
    llamas = (
	Thing("Creamy"),
	Thing("White"),
	Thing("Brown"),
	Thing("Gray"),
    )
%>

<% z = 0 %>
% for llama in llamas:
summon minecraft:llama ~2.4 ~2 ~${z} {Variant:${loop.index},CustomName:${text(llama.name)},Tame:True,NoAI:True,Silent:True,Rotation:[90f,0f]}
summon minecraft:llama ~-0.6 ~2 ~${z} {Variant:${loop.index},Age:-2147483648,Tags:[kids],Tame:True,NoAI:True,Silent:True,Rotation:[90f,0f]}
<% z += 2 %>\
% endfor
summon minecraft:llama_spit ~ ~3 ~3 {CustomName:"\"Llama Spit\"",TXD:0,TYD:0,TZD:0,Steps:0,NoAI:True,Motion:[0,0,0],NoGravity:True}
