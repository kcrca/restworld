<%namespace name="base"  file="base.mcftmpl"/>
<%
    up = Thing("Bubble Column", block_state="drag=false")
    down = Thing("Bubble Column", block_state="drag=true")
    columns = (up, down)
    blocks = (Thing("Soul Sand"), Thing("Magma BlocK"))
%>

<%base:loop collection="${columns}" args="when,i,thing">
${when(i)} setblock ~ ~2 ~ ${blocks[i].full_id()}
${when(i)} fill ~ ~3 ~ ~ ~7 ~-1 ${thing.full_id()}
</%base:loop>
