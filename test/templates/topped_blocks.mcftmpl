<%namespace name="base"  file="base.mcftmpl"/>
<% blocks = (
	Thing("Grass Path"), Thing("Grass Block"),
	Thing("Grass Block", block_state="snowy=true"), Thing("Mycelium"), Thing("Podzol")
   )
%>

<%! clear_next = False %>
<%base:loop collection="${blocks}" args="when,i,thing">
${when(i)} setblock ~ ~3 ~ ${thing.full_id()}
%if thing.block_state:
${when(i)} data merge block ~1 ~2 ~ {Text1:${text("Snowy")},Text2:${text(thing.name)}}
%else:
${when(i)} data merge block ~1 ~2 ~ {Text1:${text("")},Text2:${text(thing.name)}}
%endif

</%base:loop>
