<%namespace name="base"  file="base.mcftmpl"/>

${base.mobs_init(z_delta_init=-2, adult_x_init=-2.5, kid_x_init=0.5, rotation_init=270)}\
% for horse in horses:
${base.mobs(horse.name, id="horse", nbt="Variant:%d" % loop.index, tags=(horse.tag,))}\
% endfor
% for horse in other_horses:
${base.mobs(horse.name, tags=(horse.tag,))}\
% endfor
execute at @e[tag=${horses[3].tag},tag=kid] run setblock ~1 ~ ~ minecraft:wall_sign[facing=east]{Text2:${text("Variant:")}} replace
