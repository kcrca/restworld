
{% for id, name in colors %}
    {% if loop.first %}
	execute unless score {{func}} funcs matches 0..{{loop.length}} run scoreboard players {{func}} funcs -1
	scoreboard players add {{func}} 1
	execute unless score {{func}} funcs matches 0..{{loop.length}} run scoreboard players {{func}} funcs 0
    {% endif %}

    say {{loop.index0}} -- {{id}} is {{name}}
{% endfor %}
