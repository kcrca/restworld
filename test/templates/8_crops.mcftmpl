<%namespace name="base"  file="base.mcftmpl"/>
<% stages = range(0, 8) + [7, 7] %>

<%base:loop collection="${stages}" args="when,i,thing">\
${base.crop(stages, "wheat", 0, 3, 0, when, i, thing)}\
${base.crop(stages, "carrots", 4, 3, 0, when, i, thing)}\
${base.crop(stages, "potatoes", 4, 3, -4, when, i, thing)}\
${base.crop(stages, "farmland", 0, 2, -12, when, i, thing, "moisture")}\
</%base:loop>
